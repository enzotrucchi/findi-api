{
    "info": {
        "_postman_id": "proyecto-comentarios-collection",
        "name": "Findi API - Comentarios de Proyectos",
        "description": "Colección de endpoints para gestionar comentarios de proyectos en Findi API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Obtener comentarios de un proyecto",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Accept",
                        "value": "application/json",
                        "type": "text"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/api/proyectos/:id/comentarios",
                    "host": ["{{base_url}}"],
                    "path": ["api", "proyectos", ":id", "comentarios"],
                    "variable": [
                        {
                            "key": "id",
                            "value": "1",
                            "description": "ID del proyecto"
                        }
                    ]
                },
                "description": "Obtiene todos los comentarios de un proyecto específico"
            },
            "response": []
        },
        {
            "name": "Agregar comentario a un proyecto",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Accept",
                        "value": "application/json",
                        "type": "text"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"detalle\": \"Este es un comentario de prueba sobre el proyecto\",\n    \"fecha\": \"2025-12-09 10:00:00\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/proyectos/:id/comentarios",
                    "host": ["{{base_url}}"],
                    "path": ["api", "proyectos", ":id", "comentarios"],
                    "variable": [
                        {
                            "key": "id",
                            "value": "1",
                            "description": "ID del proyecto"
                        }
                    ]
                },
                "description": "Agrega un nuevo comentario a un proyecto. El campo 'fecha' es opcional, si no se proporciona se usa la fecha actual."
            },
            "response": []
        },
        {
            "name": "Actualizar comentario de un proyecto",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Accept",
                        "value": "application/json",
                        "type": "text"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"detalle\": \"Comentario actualizado\",\n    \"fecha\": \"2025-12-09 11:30:00\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/proyectos/:proyectoId/comentarios/:comentarioId",
                    "host": ["{{base_url}}"],
                    "path": [
                        "api",
                        "proyectos",
                        ":proyectoId",
                        "comentarios",
                        ":comentarioId"
                    ],
                    "variable": [
                        {
                            "key": "proyectoId",
                            "value": "1",
                            "description": "ID del proyecto"
                        },
                        {
                            "key": "comentarioId",
                            "value": "1",
                            "description": "ID del comentario"
                        }
                    ]
                },
                "description": "Actualiza un comentario existente. Solo el autor del comentario puede actualizarlo."
            },
            "response": []
        },
        {
            "name": "Eliminar comentario de un proyecto",
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Accept",
                        "value": "application/json",
                        "type": "text"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/api/proyectos/:proyectoId/comentarios/:comentarioId",
                    "host": ["{{base_url}}"],
                    "path": [
                        "api",
                        "proyectos",
                        ":proyectoId",
                        "comentarios",
                        ":comentarioId"
                    ],
                    "variable": [
                        {
                            "key": "proyectoId",
                            "value": "1",
                            "description": "ID del proyecto"
                        },
                        {
                            "key": "comentarioId",
                            "value": "1",
                            "description": "ID del comentario"
                        }
                    ]
                },
                "description": "Elimina un comentario. Solo el autor del comentario puede eliminarlo."
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ]
}
